#include "gpio.h"

/*
 * easyMacros.h
 *
 *  Created on: Mar 15, 2024
 *      Author: yeosu
 *
 *  Files for using functions easier.
 */

/* Setting Macros */
#define LEFT_LED_RED_SET()      	HAL_GPIO_WritePin(GPIOD, GPIO_PIN_12, GPIO_PIN_SET)
#define LEFT_LED_RED_RESET()      	HAL_GPIO_WritePin(GPIOD, GPIO_PIN_12, GPIO_PIN_RESET)
#define LEFT_LED_GREEN_SET()    	HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13, GPIO_PIN_SET)
#define LEFT_LED_GREEN_RESET()    	HAL_GPIO_WritePin(GPIOD, GPIO_PIN_13, GPIO_PIN_RESET)
#define LEFT_LED_BLUE_SET()     	HAL_GPIO_WritePin(GPIOD, GPIO_PIN_14, GPIO_PIN_SET)
#define LEFT_LED_BLUE_RESET()       HAL_GPIO_WritePin(GPIOD, GPIO_PIN_14, GPIO_PIN_RESET)
#define RIGHT_LED_RED_SET()     	HAL_GPIO_WritePin(GPIOC, GPIO_PIN_6, GPIO_PIN_SET)
#define RIGHT_LED_RED_RESET()     	HAL_GPIO_WritePin(GPIOC, GPIO_PIN_6, GPIO_PIN_RESET)
#define RIGHT_LED_GREEN_SET()   	HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_SET)
#define RIGHT_LED_GREEN_RESET()   	HAL_GPIO_WritePin(GPIOB, GPIO_PIN_5, GPIO_PIN_RESET)
#define RIGHT_LED_BLUE_SET()    	HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_SET)
#define RIGHT_LED_BLUE_RESET()    	HAL_GPIO_WritePin(GPIOB, GPIO_PIN_0, GPIO_PIN_RESET)

/* Condition Checking Macros */
#define IS_SW1_PRESSING() 			HAL_GPIO_ReadPin(GPIOE, GPIO_PIN_3) == GPIO_PIN_SET
#define IS_SW2_PRESSING() 			HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_15) == GPIO_PIN_SET
#define IS_SW3_PRESSING() 			HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_4) == GPIO_PIN_SET
#define IS_SW4_PRESSING() 			HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_10) == GPIO_PIN_SET
#define IS_LEFT_LED_RED_SET() 		HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_12) == GPIO_PIN_SET
#define IS_LEFT_LED_RED_RESET() 	HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_12) == GPIO_PIN_RESET
#define IS_LEFT_LED_GREEN_SET() 	HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_13) == GPIO_PIN_SET
#define IS_LEFT_LED_GREEN_RESET() 	HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_13) == GPIO_PIN_RESET
#define IS_LEFT_LED_BLUE_SET() 		HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_14) == GPIO_PIN_SET
#define IS_LEFT_LED_BLUE_RESET() 	HAL_GPIO_ReadPin(GPIOD, GPIO_PIN_14) == GPIO_PIN_RESET
#define IS_RIGHT_LED_RED_SET() 		HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_6) == GPIO_PIN_SET
#define IS_RIGHT_LED_RED_RESET() 	HAL_GPIO_ReadPin(GPIOC, GPIO_PIN_6) == GPIO_PIN_RESET
#define IS_RIGHT_LED_GREEN_SET() 	HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_5) == GPIO_PIN_SET
#define IS_RIGHT_LED_GREEN_RESET() 	HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_5) == GPIO_PIN_RESET
#define IS_RIGHT_LED_BLUE_SET() 	HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_0) == GPIO_PIN_SET
#define IS_RIGHT_LED_BLUE_RESET() 	HAL_GPIO_ReadPin(GPIOB, GPIO_PIN_0) == GPIO_PIN_RESET



